#!/usr/bin/env bash

WATCH_DIR="/path/to/folder"

inotifywait -m -r -e create,delete,modify,move "$WATCH_DIR" |
while read -r directory events filename; do
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] ${events} στο ${directory}${filename}"
    
    # Παράδειγμα: εκτέλεση εντολής όταν δημιουργείται νέο αρχείο .txt
    if [[ "$events" == *CREATE* && "$filename" == *.txt ]]; then
        echo "Νέο αρχείο κειμένου: $filename"
        # Εδώ μπορείς να προσθέσεις ό,τι χρειάζεται,
        # π.χ. cp, mv, αποστολή email κλπ.
    fi
done